<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd"
               xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">
    <!-- Gamification Effective storage (JPA) -->
    <component>
        <type>org.exoplatform.addons.gamification.storage.dao.GamificationDAO</type>
        <init-params>
            <value-param>
                <name>query-limit-offset</name>
                <value>20</value>
            </value-param>
        </init-params>
    </component>

    <!-- Gamification Item Effective storage (JPA) -->
    <component>
        <type>org.exoplatform.addons.gamification.storage.dao.GamificationItemDAO</type>
    </component>

    <!-- Gamification Action History storage (JPA) -->
    <component>
        <type>org.exoplatform.addons.gamification.storage.dao.GamificationHistoryDAO</type>
        <init-params>
            <value-param>
                <name>query-limit-offset</name>
                <value>10</value>
            </value-param>
        </init-params>
    </component>
    <!-- Gamification Effective Service -->
    <component>
        <type>org.exoplatform.addons.gamification.service.effective.GamificationService</type>
    </component>

    <!-- Gamification Datamodel Migration Service -->
    <component>
        <type>org.exoplatform.addons.gamification.migration.datamodel.DataModelMigration</type>
    </component>

    <!-- Gamification Effective Service -->
    <component>
        <type>org.exoplatform.addons.gamification.migration.GamificationAsyncMigrationService</type>
    </component>

    <!-- Gamification Migration Service -->
    <component>
        <type>org.exoplatform.commons.migration.JPAAsynMigrationService</type>
    </component>

    <!-- Gamification storage layour (Liquebase initializer) -->
    <external-component-plugins>
        <target-component>org.exoplatform.commons.api.persistence.DataInitializer</target-component>
        <component-plugin>
            <name>GamificationChangeLogsPlugin</name>
            <set-method>addChangeLogsPlugin</set-method>
            <type>org.exoplatform.commons.persistence.impl.ChangeLogsPlugin</type>
            <init-params>
                <values-param>
                    <name>changelogs</name>
                    <description>Change logs of Gamification</description>
                    <!--
                    <value>db/changelog/gamification.db.changelog-master.xml</value>
                    -->
                    <value>db/changelog/gamification.db.changelog-1.0.0.xml</value>
                </values-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>

    <!-- Upload badge's avatar-->
    <external-component-plugins>
        <target-component>org.exoplatform.commons.file.services.NameSpaceService</target-component>
        <component-plugin>
            <name>SocialNameSpacePlugin</name>
            <set-method>addNameSpacePlugin</set-method>
            <type>org.exoplatform.commons.file.services.NameSpacePlugin</type>
            <priority>1000</priority>
            <init-params>
                <properties-param>
                    <name>fileNameSpace.params</name>
                    <property name="name" value="gamification"/>
                    <property name="description" value="gamification files storage"/>
                </properties-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>
</configuration>