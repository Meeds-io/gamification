<configuration
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd"
        xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">
    <component>
        <key>org.exoplatform.addons.gamification.service.completation.GamificationCompletionService</key>
        <type>org.exoplatform.addons.gamification.service.completation.GamificationCompletionService</type>
        <init-params>
            <value-param>
                <name>async-execution</name>
                <value>true</value>
            </value-param>
            <value-param>
                <name>thread-pool-size</name>
                <value>5</value>
            </value-param>
            <value-param>
                <name>keepAliveTime</name> <!-- Time in seconds -->
                <value>10</value>
            </value-param>
        </init-params>
    </component>

    <!-- Rules Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.ManageRulesEndpoint</type>
    </component>
    <!-- END -->
    <!-- Domains Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.ManageDomainsEndpoint</type>
    </component>
    <!-- END -->
    <!-- Badges Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.ManageBadgesEndpoint</type>
    </component>
    <!-- END -->

    <!-- Reputation Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.UserReputationEndpoint</type>
    </component>
    <!-- END -->

    <!-- Leaderboard Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.LeaderboardEndpoint</type>
    </component>
    <!-- END -->
   <!-- Space Leaderboard Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.SpaceLeaderboardEndpoint</type>
    </component>
    <!-- END -->

    <!--  Gamification Informations Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.GamificationInformationsEndpoint</type>
    </component>
    <!-- END -->

    <!--  Challenge Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.ChallengeRest</type>
    </component>
    <!-- END -->
    <!-- Announcement API Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.AnnouncementRest</type>
    </component>
    <!-- END -->
 <!-- Gamification API Rest Service -->
    <component>
        <type>org.exoplatform.addons.gamification.rest.GamificationRestEndpoint</type>
    </component>
    <!-- END -->
    <component>
        <key>org.exoplatform.addons.gamification.service.AnnouncementService</key>
        <type>org.exoplatform.addons.gamification.service.configuration.AnnouncementServiceImpl</type>
    </component>
    <component>
        <key>org.exoplatform.addons.gamification.service.ChallengeService</key>
        <type>org.exoplatform.addons.gamification.service.configuration.ChallengeServiceImpl</type>
        <init-params>
            <value-param>
                <name>challenge.creator.group</name>
                <description>challenge creator group</description>
                <value>${exo.challenges.creators.group:/platform/administrators}</value>
            </value-param>
        </init-params>
    </component>
    <component>
        <key>org.exoplatform.addons.gamification.storage.AnnouncementStorage</key>
        <type>org.exoplatform.addons.gamification.storage.cached.AnnouncementCachedStorage</type>
    </component>
    <component>
        <type>org.exoplatform.addons.gamification.storage.RealizationsStorage</type>
    </component>
    <component>
        <key>org.exoplatform.addons.gamification.service.RealizationsService</key>
        <type>org.exoplatform.addons.gamification.service.configuration.RealizationsServiceImpl</type>
    </component>
    <component>
        <type>org.exoplatform.addons.gamification.rest.RealizationsRest</type>
    </component>

    <component>
        <type>org.exoplatform.addons.gamification.search.ChallengeSearchConnector</type>
        <init-params>
            <value-param>
                <name>query.file.path</name>
                <value>${exo.challenges.es.query.path:jar:/challenges-search-query.json}</value>
            </value-param>
            <properties-param>
                <name>constructor.params</name>
                <property name="searchType" value="challenges" />
                <property name="index" value="challenges_alias" />
            </properties-param>
        </init-params>
    </component>

    <external-component-plugins>
        <target-component>org.exoplatform.services.listener.ListenerService</target-component>
        <component-plugin>
            <name>challenge.announcement.activity</name>
            <set-method>addListener</set-method>
            <type>org.exoplatform.addons.gamification.listener.challenges.AnnouncementActivityGeneratorListener</type>
        </component-plugin>
    </external-component-plugins>
    <external-component-plugins>
        <target-component>org.exoplatform.social.core.manager.ActivityManager</target-component>
        <component-plugin>
            <name>ChallengeAnnouncementActivityProcessor</name>
            <set-method>addProcessorPlugin</set-method>
            <type>org.exoplatform.addons.gamification.activity.processor.ChallengeAnnouncementActivityProcessor</type>
            <init-params>
                <value-param>
                    <name>priority</name>
                    <description>priority of this processor (lower are executed first)</description>
                    <value>30</value>
                </value-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>
    <external-component-plugins>
        <target-component>org.exoplatform.commons.api.settings.ExoFeatureService</target-component>
        <component-plugin>
            <name>gamification</name>
            <set-method>addFeaturePlugin</set-method>
            <type>org.exoplatform.addons.gamification.plugin.GamificationFeaturePlugin</type>
        </component-plugin>
    </external-component-plugins>

    <external-component-plugins>
        <target-component>org.exoplatform.commons.search.index.IndexingOperationProcessor</target-component>
        <component-plugin>
            <name>ChallengesIndexingServiceConnector</name>
            <set-method>addConnector</set-method>
            <type>org.exoplatform.addons.gamification.connector.ChallengesIndexingServiceConnector</type>
            <description>Challenges ElasticSearch Indexing Connector</description>
            <init-params>
                <value-param>
                    <name>mapping.file.path</name>
                    <value>${exo.challenges.es.mapping.path:jar:/challenges-es-mapping.json}</value>
                </value-param>
                <properties-param>
                    <name>constructor.params</name>
                    <property name="index_alias" value="challenges_alias"/>
                    <property name="index_current" value="challenge_v1"/>
                </properties-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>

    <external-component-plugins>
        <target-component>org.exoplatform.services.listener.ListenerService</target-component>
        <component-plugin>
            <name>challenge.created</name>
            <set-method>addListener</set-method>
            <type>org.exoplatform.addons.gamification.listener.challenges.ChallengesESListener</type>
        </component-plugin>
        <component-plugin>
            <name>challenge.updated</name>
            <set-method>addListener</set-method>
            <type>org.exoplatform.addons.gamification.listener.challenges.ChallengesESListener</type>
        </component-plugin>
        <component-plugin>
            <name>challenge.deleted</name>
            <set-method>addListener</set-method>
            <type>org.exoplatform.addons.gamification.listener.challenges.ChallengesESListener</type>
        </component-plugin>
    </external-component-plugins>
    <external-component-plugins>
        <target-component>org.exoplatform.services.scheduler.JobSchedulerService</target-component>
        <component-plugin>
            <name>AddCronJob</name>
            <set-method>addCronJob</set-method>
            <type>org.exoplatform.services.scheduler.CronJob</type>
            <description>Add a job to index already created challenges</description>
            <init-params>
                <properties-param>
                    <name>cronjob.info</name>
                    <description>Add a job to index already created challenges</description>
                    <property name="jobName" value="ChallengeIndexingESJob"/>
                    <property name="groupName" value="Gamification"/>
                    <property name="job" value="org.exoplatform.addons.gamification.job.ChallengeIndexingESJob"/>
                    <property name="expression" value="${exo.gamification.job.ChallengeIndexingESJob:0 0 0 ? * * *}"/>
                </properties-param>
            </init-params>
        </component-plugin>
    </external-component-plugins>

</configuration>