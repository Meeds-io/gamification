{
  "from": "@offset@",
  "size": "@limit@",
  "query": {
    "bool": {
      "filter": {
        "terms": {
          "audience": [
            @spaceList@
          ]
        }
      },
      "must": [
        {
          "query_string": {
            "fields": ["title", "description"],
            "query": "*@term_query@*",
            "fuzziness": 1,
            "phrase_slop": 1
          }
        }
        @domain_filtering@
      ]
    }
  },
  "highlight" : {
    "number_of_fragments" : 2,
    "fragment_size" : 150,
    "no_match_size" : 0,
    "order": "score",
    "fields" : {
      "title" : {
        "pre_tags" : ["<span class='searchMatchExcerpt'>"],
        "post_tags" : ["</span>"]
      },
      "description" : {
        "pre_tags" : ["<span class='searchMatchExcerpt'>"],
        "post_tags" : ["</span>"]
      }
    }
  }
}