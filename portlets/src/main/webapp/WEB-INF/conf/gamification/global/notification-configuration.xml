<configuration
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd"
  xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.service.setting.PluginSettingService</target-component>
    <component-plugin>
      <name>notification.groups</name>
      <set-method>registerGroupConfig</set-method>
      <type>org.exoplatform.commons.api.notification.plugin.GroupProviderPlugin</type>
      <description>Kudos group</description>
      <init-params>
        <object-param>
          <name>group.gamification</name>
          <description>The information of group gamification</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.GroupConfig">
            <field name="id">
              <string>gamification</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.group.Gamification</string>
            </field>
            <field name="order">
              <string>200</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.service.setting.PluginContainer</target-component>
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.notification.ActionPublishedNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.GamificationActionPublishedNotificationPlugin</name>
          <description>The template of ActionPublishedNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>GamificationActionPublishedNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.GamificationActionPublishedNotificationPlugin</string>
            </field>
            <field name="order">
              <string>4</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>gamification</string>
            </field>
            <field name="bundlePath">
              <string>locale.addon.Gamification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>notification.plugins</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.notification.ActionAnnouncedNotificationPlugin</type>
      <init-params>
        <object-param>
          <name>template.GamificationActionAnnouncedNotificationPlugin</name>
          <description>The template of ActionAnnouncedNotificationPlugin</description>
          <object type="org.exoplatform.commons.api.notification.plugin.config.PluginConfig">
            <field name="pluginId">
              <string>GamificationActionAnnouncedNotificationPlugin</string>
            </field>
            <field name="resourceBundleKey">
              <string>UINotification.label.GamificationActionAnnouncedNotificationPlugin</string>
            </field>
            <field name="order">
              <string>4</string>
            </field>
            <field name="defaultConfig">
              <collection type="java.util.ArrayList">
                <value>
                  <string>Instantly</string>
                </value>
              </collection>
            </field>
            <field name="groupId">
              <string>gamification</string>
            </field>
            <field name="bundlePath">
              <string>locale.addon.Gamification</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.api.notification.channel.ChannelManager</target-component>
    <component-plugin>
      <name>web.channel.gamification.template</name>
      <set-method>registerTemplateProvider</set-method>
      <type>io.meeds.gamification.notification.WebTemplateProvider</type>
      <init-params>
        <value-param>
          <name>channel-id</name>
          <value>WEB_CHANNEL</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>mail.channel.kudos.template</name>
      <set-method>registerTemplateProvider</set-method>
      <type>io.meeds.gamification.notification.MailTemplateProvider</type>
      <init-params>
        <value-param>
          <name>channel-id</name>
          <value>MAIL_CHANNEL</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin profiles="push-notifications">
      <name>push.channel.kudos.template</name>
      <set-method>registerTemplateProvider</set-method>
      <type>io.meeds.gamification.notification.MobilePushTemplateProvider</type>
      <init-params>
        <value-param>
          <name>channel-id</name>
          <value>PUSH_CHANNEL</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>rule.published</name>
      <set-method>addListener</set-method>
      <type>io.meeds.gamification.listener.ActionPublishedNotificationListener</type>
    </component-plugin>
    <component-plugin>
      <name>announcement.created</name>
      <set-method>addListener</set-method>
      <type>io.meeds.gamification.listener.ActionAnnouncedNotificationListener</type>
    </component-plugin>
  </external-component-plugins>

</configuration>