{
  "from": "@offset@",
  "size": "@limit@",
  "query": {
    "bool": {
      "filter": {
        "terms": {
          "audience": [
            @spaceList@
          ],
          "boost": 3
        }
      },
      "should": {
        "match_phrase": {
          "domainId": {
            "query": "@domainId@",
            "boost": 3
          }
        }
      },
      "must": [
        {
          "query_string": {
            "fields": [
              "title",
              "description"
            ],
            "query": "*@term_query@*",
            "fuzziness": 1 ,
            "phrase_slop": 1
          }
        },
        {
          "term": {
            "domainId": {
              "value": "@domainId@"
            }
          }
        }
      ]
    }
  }
}