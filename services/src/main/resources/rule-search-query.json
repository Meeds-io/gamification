{
  "from": "@offset@",
  "size": "@limit@",
  "query": {
    "bool": {
      "filter": {
        "terms": {
          "audience": [
            @spaceList@
          ]
        }
      },
      "must": [
        {
          "query_string": {
            "fields": [
              "title",
              "description"
            ],
            "query": "*@term_query@*",
            "fuzziness": 1,
            "phrase_slop": 1
          }
        }
        @domain_filtering@
      ]
    }
  }
}